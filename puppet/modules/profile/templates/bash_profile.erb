# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
        . ~/.bashrc
fi

# User specific environment and startup programs

KVHOME=<%= @kvHome %>
PATH=$PATH:$HOME/bin:/bin:/usr/local/bin:/usr/bin:/bin:<%= @kvHome %>/bin

export KVHOME
export PATH

KVROOT=$KVHOME/kvroot
export KVROOT

alias kvclient="java -Xmx256m -Xms256m -jar $KVHOME/lib/kvclient.jar"
alias kvstore="java -Xmx256m -Xms256m -jar $KVHOME/lib/kvstore.jar"
alias jps="/usr/java/jdk1.7.0_45/bin/jps"
